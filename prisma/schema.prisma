generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  MANAGER
  MEMBER
}

enum SubsPlan {
  FREE
  PRO
}

model Tenant {
  id   String   @id @default(uuid())
  name String
  slug String   @unique
  plan SubsPlan @default(FREE)

  users User[]
  notes Note[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  role     UserRole @default(MANAGER)

  notes Note[]

  Tenant   Tenant? @relation(fields: [tenantId], references: [id])
  tenantId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantId])
}

model Note {
  id      String @id @default(uuid())
  title   String
  content String

  userId   String
  User     User    @relation(fields: [userId], references: [id])
  tenantId String?
  Tenant   Tenant? @relation(fields: [tenantId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantId])
  @@index([userId])
}
